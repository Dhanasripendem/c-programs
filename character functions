// Online C compiler to run C program online
#include <stdio.h>
#include<string.h>
int main() {
    char s[30];
    int i,x=0,y=0,z==0;
    printf("enter a string");
    gets(s);
    
    for(i=0;s[i]!='\0';i++)
    {
        if(isupper(s[i]))
        x=x+1;
        else if(islower(s[i]))
        y=y+1;
        else if(isdigits(s[i]))
        z=z+1;
    }
    printf("count of  uppercase characters:%d\n",x);
 printf("count of  lowercase characters:%d\n",y);
  printf("count of numbers:%d\n",z);  
    return 0;
}
